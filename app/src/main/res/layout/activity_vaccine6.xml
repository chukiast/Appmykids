<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vaccine6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounda"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="suksun.appmykids.vaccine6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView60"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="รับวัดซีน อายุ 4 ปี - 6 ปี "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="วันที่รับวัคซีน"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txt_datevac6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_action_bar_splitter"
                android:ems="10"
                android:hint="วว/ดด/ปป"
                android:inputType="date" />

            <RadioGroup
                android:id="@+id/rdg57"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkdtp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="ได้รับ"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DTP5 (ดีทีพี กระตุ้น 2)"
                    android:textSize="18sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView61"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="คอตีบ/ไอกรน/บาดทะยัก"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/txt_datevac26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_action_bar_splitter"
                android:ems="10"
                android:hint="วว/ดด/ปป"
                android:inputType="date" />

            <RadioGroup
                android:id="@+id/rdg58"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkopv5"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="ได้รับ"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OPV5 (โอพีวี กระตุ้น 2)"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="โปลิโอ"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnsavevac6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_orange_dark"
                    android:text="บันทึก"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
