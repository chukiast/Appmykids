<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_development1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="suksun.appmykids.Development1"
    android:background="#f7fba3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:scrollbars="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="พัฒนากาของเด็กอายุ 1 ปี"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. ยืนได้ 2 วินาที"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rdg1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbstatrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำได้" />

                <RadioButton
                    android:id="@+id/rdbstafalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำไม่ได้" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. จับนิ้วมือหยิบของชิ้นเล็ก"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rdg2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbhatrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำได้" />

                <RadioButton
                    android:id="@+id/rdbhafalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำไม่ได้" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. โบกมือหรือตบมือตามคำสั่ง"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rdg3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbhattrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำได้" />

                <RadioButton
                    android:id="@+id/rdbhatfalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำไม่ได้" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. แสดงต้องการโดยทำท่าทางหรือเปล่งเสียง"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rdg4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbvitrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำได้" />

                <RadioButton
                    android:id="@+id/rdbvifalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำไม่ได้" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. เล่นสิ่งของตามประโยชน์สิ่งของได้"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rdg5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbpatrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำได้" />

                <RadioButton
                    android:id="@+id/rdbpafalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำไม่ได้" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnsavedve1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_bright"
                    android:text="บันทึก"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
