                <Button
                    android:id="@+id/btnsavedve2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_bright"
                    android:text="บันทึก"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </LinearLayout>
        </ScrollView>
