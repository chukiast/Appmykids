<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_egister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="suksun.appmykids.RegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView84"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:text="สมัครสมาชิก"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView85"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView86"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtaddusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView87"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
        android:id="@+id/textView88"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18sp" />

        <EditText
            android:id="@+id/txtaddpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView872"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/textView889"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ชื่อผู้ปกครอง"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtpname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView878"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/textView8589"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ชื่อบุตร"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtcname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView79"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView89"
                android:layout_width="31dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnaddrtr "
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:background="@android:color/holo_blue_bright"
                android:text="สมัครสมาชิก" />

            <Button
                android:id="@+id/btuout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:background="@android:color/holo_orange_light"
                android:text="ยกเลิก" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
